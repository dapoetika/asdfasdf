def ganimet_karavani(btn):

    girildi = ara("./images/girildi.png")
    if girildi == -1:
        return "appopen"
    
    now = datetime.datetime.now()
    if int(now.strftime("%H") ) < 6 and int(now.strftime("%H") ) > 0:
        print("gece")
        time.sleep(bekleme_carpani*3)
        click(btn,295, 525)
        return "gece"
    print("gece kontrol")
